<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textPop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Population: Number" />

    <TextView
        android:id="@+id/textEmploy"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Employment: Number" />

    <TextView
        android:id="@+id/textEmployS"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:hint="Employment (Sufficiency) :Number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageWeather"
            android:layout_width="169dp"
            android:layout_height="97dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weatherType"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:hint="weatherType" />

            <TextView
                android:id="@+id/weatherWind"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="weatherWind" />

            <TextView
                android:id="@+id/weatherTemp"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:hint="weatherTemp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>