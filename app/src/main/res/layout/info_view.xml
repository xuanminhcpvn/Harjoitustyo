<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textPop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Population: Number" />

    <TextView
        android:id="@+id/textEmploy"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="Employment: Number" />

    <TextView
        android:id="@+id/textEmployS"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:hint="Employment (Sufficiency) :Number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageWeather"
            android:layout_width="162dp"
            android:layout_height="203dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="241dp"
            android:layout_height="170dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weatherDescription"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:hint="weatherDescription" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>